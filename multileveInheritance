class A{
    void showA(){
         System.out.println("A class Method");
     }
 }
 class B extends A{
     void showB(){
          System.out.println("B class Method");
     }
 }
 class C extends B{
     void showC(){
         System.out.println("C class Method");
     }
      public static void main(String[]args){
         A object1 = new A();
         object1.showA();
         B object2 = new B();
         object2.showA();
         object2.showB();
         C object3 = new C();
         object3.showA();
          object3.showB();
           object3.showC();
     }
 }
